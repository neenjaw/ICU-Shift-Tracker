<div class="form-group">
  <label for="{{prefix}}-{{type}}-table">Choose the assignment for staff:</label>
  <table id="{{prefix}}-{{type}}-table" class="table">
  {{#each staff}}
    <tr>
      <td>{{this.name}}</td>
      <td>
        <select name="{{../prefix}}-{{../type}}" class="custom-select" {{#if required}}required{{/if}}>
          <option value="" disabled selected>Select a pod...</option>
          {{#each ../assignment}}
            <option id="" value="{{this.id}}">{{this.assignment}}</option>
          {{/each}}
        </select>
      </td>
    </div>
  {{/each}}
  </table>
</div>
